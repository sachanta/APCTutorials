<testscenario xmlns="www.pushtotest.com/tm5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="www.pushtotest.com/XSD/testscenario.xsd" version="2.0">
  <basics>
    <name>HAR Load Test</name>
    <defaultdirectory>{scenario}</defaultdirectory>
    <basicName>Appvance</basicName>
    <creator/>
    <links>http://www.appvance.com</links>
    <versions>2.0</versions>
    <categorization>Tutorials</categorization>
  </basics>
  <resources>
    <resource name="login.har" type="har" path="{scenario}/login.har" cache="false"/>
    <resource name="search.har" type="har" path="{scenario}/search.har" cache="false"/>
    <resource type="data" path="{scenario}/data.csv" cache="false"/>
  </resources>
  <testnodes>
    <node name="localhost" location="http://localhost:8080/TMServer/ws/TestNode"/>
  </testnodes>
  <bundles>
    <bundle name="hibernate" version="3.0"/>
    <bundle name="har" version="2.0"/>
    <bundle name="mysql" version="5.0"/>
  </bundles>
  <datasources>
    <dpl name="DPL1" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
    <dpl name="DPL2" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
    <dpl name="DPL3" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
    <dpl name="DPL4" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
    <dpl name="DPL5" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
    <dpl name="DPL6" type="HashDPL" langtype="java" method="setup">
      <argument name="Remote path of the file" dpl="Resources" method="getResourceByName">
        <argument name="file" value="data.csv"/>
      </argument>
    </dpl>
  </datasources>
  <options>
    <options type="apc">
      <opt name="SleepTime" value="1"/>
      <opt name="RampUpUsers" value="1"/>
      <opt name="RampUpSeconds" value="1"/>
      <opt name="MaxRampUpTime" value="1"/>
      <opt name="RampDownUsers" value="1"/>
      <opt name="RampDownSeconds" value="1"/>
      <opt name="MaxRampDownTime" value="1"/>
      <opt name="ThinkTimeMin" value="0"/>
      <opt name="ThinkTimeMax" value="0"/>
      <opt name="PercentageLogsSaved" value="100"/>
      <opt name="ThinkTime" value="0"/>
      <opt name="IntervalTime" value="1"/>
      <opt name="DynamicIpAddress" value="false"/>
      <opt name="EnableSavingLogs" value="true"/>
      <opt name="AlwaysSaveLogOnFailure" value="true"/>
      <opt name="AddThinkTimeToStep" value="false"/>
    </options>
    <options type="htmlunit">
      <opt name="DebuggingWebConnection" value="false"/>
      <opt name="xmltestresultimpl" value="false"/>
      <opt name="csswarning" value="false"/>
      <opt name="jswarning" value="false"/>
      <opt name="HtmlUnitContextFactory" value="false"/>
    </options>
    <options type="selenium">
      <opt name="loglevel" value="INFO"/>
      <opt name="throwExceptionOnScriptError" value="false"/>
      <opt name="throwExceptionOnFailingStatusCode" value="false"/>
    </options>
    <options type="sahi">
      <opt name="clearCache" value="false"/>
      <opt name="DynamicIpAddress" value="false"/>
    </options>
    <options type="seleniumrc">
      <opt name="listenport" value="6543"/>
      <opt name="port" value="5555"/>
    </options>
  </options>
  <templates>
    <controller name="Iteration1">
      <round name="Iteration1" totalusers="1" time="1" testtype="users" totaliterations="1"/>
    </controller>
    <controller name="Iteration2">
      <round name="Iteration2" totalusers="2" time="1" testtype="users" totaliterations="2"/>
    </controller>
    <testcase name="HARTutorial" expand="yes" iterationState="true">
      <test>
        <run name="Test1" instance="myinstance" langtype="har" resource="login.har">
          <argument name="DPL1" method="getNextData" dpl="DPL1"/>
        </run>
        <run name="Test2" instance="myinstance" langtype="har" resource="search.har">
          <argument name="DPL2" method="getNextData" dpl="DPL2"/>
        </run>
        <run name="Test3" langtype="har" resource="search.har">
          <argument name="DPL3" method="getNextData" dpl="DPL3"/>
        </run>
      </test>
    </testcase>
    <testcase name="TestCase2" expand="yes" iterationState="true">
      <test>
        <run name="Test4" instance="myinstance2" langtype="har" resource="login.har">
          <argument name="DPL4" method="getNextData" dpl="DPL4"/>
        </run>
        <run name="Test5" instance="myinstance2" langtype="har" resource="search.har">
          <argument name="DPL5" method="getNextData" dpl="DPL5"/>
        </run>
        <run name="Test6" langtype="har" resource="search.har">
          <argument name="DPL6" method="getNextData" dpl="DPL6"/>
        </run>
      </test>
    </testcase>
  </templates>
  <monitoring enablednodes="true" enabledtarget="false"/>
  <execution type="loadtest">
    <iteration controller="Iteration1" name="Iteration1">
      <testcase name="HARTutorial" users="1">
        <locations>
          <location name="localhost" users="1"/>
        </locations>
      </testcase>
    </iteration>
    <iteration controller="Iteration2" name="Iteration2">
      <testcase name="TestCase2" users="2">
        <locations>
          <location name="localhost" users="2"/>
        </locations>
      </testcase>
    </iteration>
  </execution>
  <logs>
    <log type="database">
      <opt name="hibernate.connection.username" value="apc"/>
      <opt name="hibernate.connection.password" value="apc"/>
      <opt name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/apc"/>
      <opt name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
    </log>
  </logs>
  <integrations>
    <integration type="RQM">
      <opt name="Enabled" value="false"/>
    </integration>
  </integrations>
  <notifications/>
</testscenario>
